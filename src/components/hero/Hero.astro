---
import { Image, getImage } from "astro:assets";
import type { CollectionEntry } from "astro:content";

type Props = CollectionEntry<"pages">["data"]["hero"];

const { title, background_image, style, inner_image } = Astro.props!;

---

<section
  class:list={[
    style,
    "hero-background",
    "flex flex-col  text-white justify-around  h-72",
  ]}
>
  {inner_image ?  <Image
    src={inner_image.src}
    alt={inner_image.alt}
    class="w-64"
  /> : <></>}
  <div class="w-full mx-auto px-2 container">
  <h1 class="text-inherit text-3xl lg:text-5xl text-left w-full ">{title}</h1>
</div>
</section>

<style define:vars={{ backgroundUrl: `url(${background_image.src})` }}>
  .hero-background {
    background-image: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8)),
      var(--backgroundUrl);
    background-position: center;
    background-size: 105%;
    object-fit: cover;
    background-repeat: no-repeat;
  }

  @media only screen and (max-width: 450px) {
  .hero-background {
    background-size: auto 105%;
  }
}
</style>

