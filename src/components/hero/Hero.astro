---
import { Image, getImage } from "astro:assets";
import type { CollectionEntry } from "astro:content";

type Props = CollectionEntry<"pages">["data"]["hero"];

const { title, background_image, style, inner_image } = Astro.props!;

---

<section
  class:list={[
    style,
    "hero-background",
    "flex flex-col items-center text-white justify-around px-5 h-72",
  ]}
>
  {inner_image ?  <Image
    src={inner_image.src}
    alt={inner_image.alt}
    class="w-64"
  /> : <></>}
  <h1 class="text-inherit text-3xl lg:text-5xl text-left w-full px-5 sm:px-10">{title}</h1>
</section>

<style define:vars={{ backgroundUrl: `url(${background_image.src})` }}>
  .hero-background {
    background-image: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)),
      var(--backgroundUrl);
    background-position: center;
    object-fit: cover;
    background-repeat: no-repeat;
  }
</style>

