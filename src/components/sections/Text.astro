---
const { style, text_content } = Astro.props;
import * as marked from "marked";
const markdown = marked.parse(text_content.text);
---

<div
  class:list={[
    style,
    "prose-lg md:prose-xl px-4 prose-a:text-accent hover:prose-a:underline prose-a:no-underline",
  ]}
>
  <p set:html={markdown} />
</div>
